{
  "name": "rss-proxy-server",
  "version": "1.0.0",
  "description": "Standalone RSS proxy server for CORS-free feed fetching",
  "main": "standalone-proxy-server.js",
  "scripts": {
    "start": "node standalone-proxy-server.js",
    "dev": "nodemon standalone-proxy-server.js",
    "test": "node test-proxy.js",
    "docker:build": "docker build -t rss-proxy-server .",
    "docker:run": "docker run -p 3001:3001 rss-proxy-server",
    "docker:test": "docker run -p 3001:3001 -d rss-proxy-server && sleep 5 && curl http://localhost:3001/health"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "node-fetch": "^2.7.0",
    "express-rate-limit": "^6.7.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  },
  "keywords": ["rss", "proxy", "cors", "feed", "news"],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  }
}
